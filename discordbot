const Discord = require('discord.js');
const client = new Discord.Client();
const {prefix, token} = require("./config.json")
var queue = new Map();

const ytdl = require('ytdl-core');


client.on('ready', () => {
    console.log(`Logged in as ${client.user.tag}!`);
});

client.on('message', async (msg) => {
    const args = msg.content.slice(prefix.length).trim().split(/ +/g);
    const command = args.shift().toLowerCase();
    const content = msg.content;
    
    if (content === 'cheese') {
        msg.reply('CheeseKimbap!'); 
    } 

    if(content === 'sana is') {
        msg.reply('Is Sana gay');
    }
   
    if(command === 'play') {
        if(!args[0]) return;
        let url = args.join(" ");
        if(!url.match(/(youtube.com|youtube.be)\/(watch)?(\?v=)?(\S+)?/)) return msg.channel.send("Porfavor inserta un link valido de YouTube!");

        let serverQueue = queue.get(msg.guild.id);
        let vc = msg.member.voice;

        if(!vc) return msg.channel.send('Debes estar conectado a un canal de voz');

        if(!vc.channel.permissionFor(Client.user).has('Conectado') || !vc.channel.permissionFor(Client.user).has('SPEAK')) return msg.channel.send("No tengo permisos!");
        
        let songinfo = ytdl.getInfo(url);
        let song = {
            tittle: songinfo.tittle,
            url: songinfo.video_url
        }
    
        if(!serverQueue) {
            let queueConst = {
                textChannel: msg.channel,
                voiceChannel: vc.channel,
                connection: null,
                songs: [],
                volume: 5,
                playing: true
            };

            queue.set(msg.guild.id, queueConst);
            queueConst.songs.push(song);

            try {
                let connection = await vc.channel.join();
                queueConst.connection = connection
                playSong(msg.guild, queueConst.songs[0])
            } catch (error) {
                console.log(error);
                queue.delete(msg.guild.id);
                return message.channel.send("Hubo un error reproduciendo la canci칩n! Error: " + error);
            }
        } else {
            serverQueue.songs.push(song);
            return msg.channel.send(`${song.title} se agreg칩 a la cola de canciones!`)
        }
    }
});

/** 
 * 
 * @param {Discord.guild} guild
 * @param {object} song 
 */
async function playSong(guild, song){
    let serverQueue = queue.get(guild.id);

    if(!song){
        serverQueue.voiceChannel.leave();
        queue.delete(guild.id);
        return;
    }

    const dispatcher = serverQueue.connection.play(ytdl(song.url)).on('No hay m치s canciones por reproducir, coloca m치s', () => {
        serverQueue.songs.shift();
        playSong(guild, serverQueue.songs[0]);
    })

    on('error', () => {
    console.log(error)
 
})

dispatcher.setVolumeLogarithmic(serverQueue.volume / 5);





}

